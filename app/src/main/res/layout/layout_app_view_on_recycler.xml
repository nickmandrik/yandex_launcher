<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/width_image_recycler_4x6"
        android:layout_height="@dimen/height_image_recycler_4x6"
        android:id="@+id/image_id"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marge_top_image_recycler_4x6"

        android:background="@android:color/transparent"
        />

    <TextView
        android:layout_height="@dimen/height_text_recycler"
        android:layout_width="@dimen/width_text_recycler_4x6"
        android:text="None"
        android:id="@+id/text_id"
        android:textSize="12sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
</LinearLayout>